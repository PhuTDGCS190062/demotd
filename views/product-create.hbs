<H1> Create a new Product ! </H1>

<div class="container">
            
    <form  action="/product" method="POST">
        <div class="mb-3">
            <label for="MaSP" class="form-label">Mã Sản Phẩm</label>
            <input type="text" class="form-control" id="MaSP" name="MaSP">
        </div>
        <div class="mb-3">
            <label for="TenSP" class="form-label">Tên Sản Phẩm</label>
            <input type="text" class="form-control" id="TenSP" name="TenSP">
        </div>
        <div class="mb-3">
            <label for="Links" class="form-label">Hình Ảnh</label>
            <input type="text" class="form-control" id="Links" name="Links">
        </div>
        <div class="mb-3">
            <label for="GiaBan" class="form-label">Giá bán</label>
            <input type="number" class="form-control" id="GiaBan" name="GiaBan" >
        </div>
        <div class="mb-3">
            <label for="BaoHanh" class="form-label">Thời Gian Bảo hành</label>
            <input type="number" class="form-control" value="1" id="BaoHanh" name="BaoHanh">
        </div>
        <div class="mb-3">
            <label for="MoTa" class="form-label">Mô Tả</label>
            <input type="text" class="form-control" id="MoTa" name="MoTa" >
        </div>
        <div class="mb-3">
            <label for="NhomSP" class="form-label">Phân Loại Sản Phẩm</label>
            <input type="text" class="form-control" id="NhomSP" name="NhomSP" >
        </div>
        <div class="mb-3">
            <label for="NhaSX" class="form-label">Nhà Sản Xuất</label>
            <input type="text" class="form-control" id="NhaSX" name="NhaSX">
        </div>
        <div class="mb-3">
            <label for="NamSX" class="form-label">Năm Sản Xuất</label>
            <input type="number" class="form-control" id="NamSX" name="NamSX">
        </div>
        <div class="mb-3">
            <label for="Model" class="form-label">Model</label>
            <input type="text" class="form-control" id="Model" name="Model">
        </div>

        <button type="submit" class="btn btn-primary">Add</button>
    </form>


  
</div>



